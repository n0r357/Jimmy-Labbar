@model CreateVM
@{ 
    ViewBag.Title = "Create Company";
}
<h1>Create Company</h1>
<form asp-controller="settings" asp-action="create" method="post">
    <br />
    <label asp-for="@Model.Email"></label>
    <br />
    <input asp-for="@Model.Email" />
    <br />
    <span asp-validation-for="@Model.Email"></span>
    <br />
    <label asp-for="@Model.CompanyName"></label>
    <br />
    <input asp-for="@Model.CompanyName" />
    <br />
    <span asp-validation-for="@Model.CompanyName"></span>
    <br />
    <input type="submit" value="Add Company" />
</form>